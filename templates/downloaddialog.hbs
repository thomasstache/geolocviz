<div class="veilBackground" />

<!-- the size is necessary to prevent blurry rendering in Chrome due to CSS centering -->
<section class="dialog centered" style="width: 30em; height: 10em;" >
	<div class="content">
		<h3>Download</h3>

		<ul>
			<li class="flexRow" >
				<a class="downloadLink" href="{{href}}" download="{{filename}}" title="{{filename}}">{{filename}}</a>
			</li>
			<li>
				<p class="dialogTip">Click to download</p>
			</li>
		</ul>
	</div>
	<div class="toolbar" style="position: relative;">
		<button id="btnCancel">Done</button>
	</div>
</section>
