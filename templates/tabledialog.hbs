<div class="veilBackground" />

<!-- the size is necessary to prevent blurry rendering in Chrome due to CSS centering -->
<section class="dialog centered" style="width: {{width}}; height: {{height}};" >
	<div class="windowcontrols">
		<button id="btnHide" title="Hide">_</button><button id="btnSnap" title="Snap to Side">&gt;</button>
	</div>

	<div class="content flexColumn">
		<h3 id="tableCaption" class="dontshrink">{{title}}</h3>

		<div class="dontshrink"><!-- this div helps flexbox layout to position the scrollbox div -->

			<table id="tableHead" class="striped user-selectable sortable">
				<colgroup>
				{{#each columns}}
					{{#if properties}}
						<col {{#if properties.class}}class="{{properties.class}}"{{/if}} {{#if properties.width}}width="{{properties.width}}"{{/if}}></col>
					{{/if}}
				{{/each}}
				</colgroup>
				<thead>
					<tr>
					{{#each columns}}
						<th data-modelattr="{{attribute}}" class="{{#if isSorted}}sorted{{#if dirDesc}} descending{{/if}}{{/if}}">
							<span class="caption">{{caption}}</span>{{#if unit}}<span class="unit"> [{{unit}}]</span>{{/if}}
						</th>
					{{/each}}
					</tr>
				</thead>
			</table>

		</div>
		<div class="scrollbox stretching">

			<table id="tableBody" class="striped user-selectable">
				<colgroup>
				{{#each columns}}
					{{#if properties}}
						<col {{#if properties.class}}class="{{properties.class}}"{{/if}} {{#if properties.width}}width="{{properties.width}}"{{/if}}></col>
					{{/if}}
				{{/each}}
				</colgroup>
				<tbody>
				{{! body with rows will be inserted here}}
				</tbody>
			</table>

		</div>
	</div>

	<div class="toolbar">
		<button id="btnClose">Close</button>
	</div>
</section>
