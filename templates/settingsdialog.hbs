<div id="settingsdialog">
	<div class="veilBackground" />

	<!-- the width/height is necessary to prevent blurry rendering in Chrome due to CSS centering -->
	<section class="dialog centered" style="width: 26em; height: 21em;">
		<div class="content">
			<h3>Settings</h3>
			<ul>
				<li><h4>Result Categorization</h4></li>
				<li><label for="probMobilityInput">Mobility Probability Threshold</label>
					<input type="number" id="probMobilityInput" step="0.1" min="0" max="1" />
				</li>
				<li><label for="probIndoorInput">Indoor Probability Threshold</label>
					<input type="number" id="probIndoorInput" step="0.1" min="0" max="1" />
				</li>
				<li><h4>Heatmap Rendering Mode</h4></li>
				<li><label for="softHeatmapThresholdInput">Threshold for suggested Heatmap</label>
					<input type="number" id="softHeatmapThresholdInput" step="1000" min="5000" />
				</li>
				<li><label for="hardHeatmapThresholdInput">Threshold for automatic Heatmap</label>
					<input type="number" id="hardHeatmapThresholdInput" step="1000" min="10000" />
				</li>
				<li>
					<label style="padding-top: 1.5ex;" >
						<input type="checkbox" id="checkUseDotIcons" />Use dots for accuracy markers
					</label>
				</li>
			</ul>
		</div>
		<div class="toolbar" style="position: relative;">
			<button id="apply-settings">Ok</button>
			<button id="cancel-settings">Cancel</button>
			<button id="reset-settings" style="position: absolute; right: 0;">Reset All</button>
		</div>
	</section>
</div>