{{#if id}}
<h3 class="etched">Selected Site</h3>
<ul class="propertyList">
	<li><span class="label">Name:</span> <span class="value">{{id}}</span></li>
	{{#if technology}}
	<li><span class="label">Tech:</span> <span class="value">{{technology}}</span></li>
	{{/if}}
{{#if sectors}}
	<li><span class="label">Sectors:</span></li>
	{{#each sectors}}
	<li class="sectoritem{{#if highlight}} highlighted{{/if}}"><span>{{id}}</span>
		<span class="value">(CI:{{cellIdentity}}
							{{#if scramblingCode}}SC:{{scramblingCode}}{{/if}}
							{{#if bcch}}BCCH:{{bcch}}{{/if}}
							&#8599;{{withUnit azimuth "°"}} &#8738;{{withUnit beamwidth "°"}})</span>
		<button class="translucent tiny symbolic filter-by-element"
				title="Filter results served by sector"
				data-ci="{{cellIdentity}}" data-netsegment="{{netSegment}}">&#8981;</button>
	</li>
	{{/each}}
{{/if}}
</ul>
{{/if}}
